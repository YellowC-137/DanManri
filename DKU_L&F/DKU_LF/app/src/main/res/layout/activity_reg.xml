<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#23036FF4"
    android:orientation="vertical">

    <ScrollView

        android:id="@+id/ScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/RegText"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:gravity="center"
                android:padding="25sp"
                android:text="Registeration"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/mailText"
                android:layout_width="match_parent"
                android:layout_height="31dp"
                android:background="#46036FF4"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:text="E-mail"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/RegEmail"
                android:layout_width="match_parent"
                android:layout_height="39dp"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="25dp"
                android:background="@drawable/unselect_rounded_edittext"
                android:textColor="#4C4C4C"
                android:textSize="15sp"
                tools:text="example@dankook.ac.kr"/>

            <TextView
                android:id="@+id/PassText"
                android:layout_width="match_parent"
                android:layout_height="31dp"
                android:background="#46036FF4"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:text="Password"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/RegPw"
                android:layout_width="match_parent"
                android:layout_height="39dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="25dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/rounded_edittext"
                android:hint="비밀번호를 입력해주세요 (6자 ~ 16자)"
                android:inputType="textPassword"
                android:maxLength="16"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/PassConfirm"
                android:layout_width="match_parent"
                android:layout_height="39dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="25dp"
                android:maxLength="16"
                android:background="@drawable/rounded_edittext"
                android:hint="비밀번호 확인"
                android:inputType="textPassword"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/UserText"
                android:layout_width="match_parent"
                android:layout_height="31dp"
                android:background="#46036FF4"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:text="User Info"
                android:textSize="15sp"
                android:layout_marginBottom="25dp"/>

            <TextView
                android:id="@+id/NameText"
                android:layout_width="match_parent"
                android:layout_height="31dp"
                android:layout_marginBottom="5dp"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:text="이름"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/StudentName"
                android:layout_width="match_parent"
                android:layout_height="39dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="25dp"
                android:background="@drawable/unselect_rounded_edittext"
                android:textColor="#4C4C4C"
                android:textSize="15sp"
                tools:text="홍길동"/>

            <TextView
                android:id="@+id/NumText"
                android:layout_width="match_parent"
                android:layout_height="31dp"
                android:layout_marginBottom="5dp"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:text="학번"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/StudentNum"
                android:layout_width="match_parent"
                android:layout_height="39dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="25dp"
                android:background="@drawable/unselect_rounded_edittext"
                android:textColor="#4C4C4C"
                android:textSize="15sp"
                tools:text="00000000" />

            <Button
                android:id="@+id/RegButton"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/button_shape2_blue"
                android:shadowColor="#A8A8A8"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                android:text="회원가입"
                android:textColor="@color/colorWhite" />

            <Button
                android:id="@+id/RegPhoto"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="40dp"
                android:background="@drawable/button_shape1"
                android:shadowColor="#A8A8A8"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                android:text="사진 찍기"
                android:textColor="@color/colorWhite" />


        </LinearLayout>

    </ScrollView>

</androidx.appcompat.widget.LinearLayoutCompat>